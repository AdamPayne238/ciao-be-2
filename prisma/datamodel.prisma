type User {
  id: ID! @id
  first_name: String!
  last_name: String!
  email: String! @unique
  password: String!
  bio: String
  Status: String
  github: String
  linkedin: String
  twitter: String
  createdAt: DateTime! @createdAt
  chats: [Chat!]
  messages: [Message!]
}

type Chat {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  active: Boolean @default(value: false)
  participants: [User!]
  messages: [Message!]
}

type Message {
  id: ID! @id
  text: String!
  createdAt: DateTime! @createdAt
  chatId: Chat!
  user: User!
}