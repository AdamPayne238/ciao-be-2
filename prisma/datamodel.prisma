type User {
  id: ID! @id
  first_name: String!
  last_name: String!
  email: String! @unique
  password: String!
}

type Chat {
  id: ID! @id
  isPending: Boolean! @default(value: true)
  isAccepted: Boolean! @default(value: false)
  isDenied: Boolean! @default(value: false)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  messages: Message!
  user: String
  friend: String
}

type Message {
  id: ID! @id
  createdAt: DateTime! @createdAt
  text: String!
  user: String
}