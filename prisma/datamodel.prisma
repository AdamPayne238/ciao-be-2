type User {
  id: ID! @id
  first_name: String!
  last_name: String!
  email: String! @unique
  password: String!
  chats: [Chat!]
  messages: [Message!]
}

type Chat {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  participants: [User!]
  messages: [Message!]
}

type Message {
  id: ID! @id
  text: String!
  createdAt: DateTime! @createdAt
  chatId: Chat!
  user: User!
}